 
 <div class="card editPost">
     <h2>Edit Post</h2>
 <form class="form editPostForm justify-content-center">
<div class="mb-3">
  <label for=" formGroupExampleInput postTitle" class="titleForm">Title:</label>
  <input type="text" class="input form-control" id="postTitle" value="{{posts.title}}">
</div>
<div class="mb-3">
      <label for="postContent" class="contentForm">Content:</label>
  <textarea class="textarea form-control" id="contentForm" rows="7" value=""> {{posts.post_content}}</textarea>
</div>
<div class"is-pulled-right">
  Created by You on {{format_date posts.date_created}} 
  
</div>

   <div class="form-group">
  <button type="submit" class="btn btn-dark" style=" margin-top: 4px; width:200px;">Save post</button>
    <button type="button" class=" btn btn-dark delete-post-btn" style=" margin-top: 4px; width:200px;">Delete post</button>
      </div>
</form>
</div>


{{> comments posts.comments}}

<script src="/js/editPost.js"></script>
<script src="/js/delete.js"></script>
<script src="/js/comments.js"></script>

