<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; Return to Dashboard</a>
  <h2 class="title mt-5">Edit Post</h2><hr>
  <form class="editPostForm">
    <div>
        <label for="post-title">Title:</label>
      <input class="input" id="postTitle" name="post-title" type="text" value="{{editPost.title}}" />
    </div>
    <div>
        <label for="post-content">Content:</label>
      <input class="textarea" id="postContent" name="post-content" type="text" value="{{editPost.post_content}}" />
    </div>
    <div class="is-pulled-right">
       Created By You on {{ editPost.date_created}}
      |
      {{!-- <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a> --}}
    </div>
    <button type="submit" class="button is-success">Save post</button>
    <button type="button" class="button is-danger delete-post-btn">Delete post</button>
  </form>
</article>

