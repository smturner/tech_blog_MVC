<h1>List of posts</h1>

{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>{{post.title}}
    </h2>
    <p>Created by {{post.user.name}} on {{
         post.date_created}}</p>
    </div>
    <div class="row mb-4 post">
    <p>
      <span class="content">{{post.post_content}}</span>
    </p>
    
  </div>

  </div>
</div>
{{/each}}