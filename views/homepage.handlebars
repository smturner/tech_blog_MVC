<h1>List of posts</h1>

{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5 title">
    <h2>{{post.title}}
    </h2>
    <p class="date">Created by {{post.user.name}} on {{format_date date_created}}</p>

    </div>
    <div class="row mb-4 post">
    <p>
      <span class="content">{{post.post_content}}</span>
    </p>
    
  </div>

  </div>
</div>
{{/each}}